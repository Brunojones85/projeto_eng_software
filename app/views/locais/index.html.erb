<p id="notice"><%= notice %></p>

<h1>Locais</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Ativo</th>
      <th>Cep</th>
      <th>Rua</th>
      <th>Numero</th>
      <th>Estado</th>
      <th>Cidade</th>
      <th>Bairro</th>
      <th>Telefone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locais.each do |local| %>
      <tr>
        <td class='nome'	><%= local.nome %></td>
        <td class='ativo'><%= local.ativo %></td>
        <td class='cep'><%= local.cep %></td>
        <td class='rua'><%= local.rua %></td>
        <td class='numero'><%= local.numero %></td>
        <td class='estado'><%= local.cidade.estado.nome %></td>
        <td class='cidade'><%= local.cidade.nome %></td>
        <td class='bairro'><%= local.bairro %></td>
        <td class='telefone'><%= local.telefone %></td>
        <td class='Show'><%= link_to 'Show', local %></td>
        <td class='Edit'><%= link_to 'Edit', edit_local_path(local) %></td>
        <td class='Destroy'><%= link_to 'Destroy', local, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

