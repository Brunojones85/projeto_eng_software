<header class="w3-container w3-teal">
  <h1>Agende R&aacute;pido - Listar M&eacute;dicos</h1>
</header>

<div class="w3-container w3-quarter{float:left;width:100%} w3-margin-top">
<div class="w3-container w3-card-4">


<p id="notice"><%= notice %></p>


<table class="w3-table-all">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Crm</th>
      <th>Local</th>
      <th>Telefone</th>
      <th>Celular</th>
      <th>Email</th>
      <th>Sexo</th>
      <th>Situacao</th>
      <th>Especialidades</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @medicos.each do |medico| %>
      <tr>
        <td><%= medico.nome %></td>
        <td><%= medico.crm %></td>
        <td><%= medico.local %></td>
        <td><%= medico.telefone %></td>
        <td><%= medico.celular %></td>
        <td><%= medico.email %></td>
        <td><%= medico.sexo %></td>
        <td><%= medico.situacao %></td>
        <td>
        <% medico.especialidades.each do | e | %>
           <%= e.Nome %>
        <% end %>
        </td>

        <td><%= link_to 'Mostrar', medico %></td>
        <td><%= link_to 'Editar', edit_medico_path(medico) %></td>
        <td><%= link_to 'Excluir', medico, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'Novo Medico', new_medico_path %>
