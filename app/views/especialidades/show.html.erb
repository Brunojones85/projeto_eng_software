<%- model_class = Especialidade -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:Nome) %>:</strong></dt>
  <dd><%= @especialidade.Nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Descricao) %>:</strong></dt>
  <dd><%= @especialidade.Descricao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ativo) %>:</strong></dt>
  <dd><%= @especialidade.ativo %></dd>
</dl>

<%= link_to t('.Voltar', :default => t("Voltar")),
              especialidades_path, :class => 'btn btn-default'  %>
<%= link_to t('.Editar', :default => t("Editar")),
              edit_especialidade_path(@especialidade), :class => 'btn btn-default' %>
<%= link_to t('.Apagar', :default => t("Apagar")),
              especialidade_path(@especialidade),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("Você tem certeza que deseja apagar esta especialidade ?", :default => 'Você tem certeza que deseja apagar esta especialidade ?')) },
              :class => 'btn btn-danger' %>
